{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "*": ["node_modules/*"]
    },
    "jsx": "react-jsx",
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
